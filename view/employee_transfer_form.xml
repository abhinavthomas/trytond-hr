<?xml version="1.0"?>
<form string="Promotion / Tranfer Proposal">
    <label name="proposed_company"/>
    <field name="proposed_company"/>
    <label name="proposed_department"/>
    <field name="proposed_department"/>
    <label name="proposed_allowance"/>
    <field name="proposed_allowance"/>
    <label name="proposed_doj"/>
    <field name="proposed_doj"/>
    <label name="employee"/>
    <field name="employee"/>
    <newline/>
    <field name="remarks" colspan="4"/>
    <group col="3" colspan="4" id="proposal_buttons">
        <button name="review" string="Submit"
            icon="tryton-executable" />
        <button name="approve" string="Approve"
            icon="tryton-ok" />
        <button name="reject" string="Reject"
            icon="tryton-cancel" />
    </group>
    <label name="state"/>
    <field name="state" colspan="3"/>
</form>
